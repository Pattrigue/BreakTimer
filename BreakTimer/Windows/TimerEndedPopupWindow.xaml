<Window x:Class="BreakTimer.TimerEndedPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakTimer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Break Time!" Height="164" Width="363">
    <Grid>
        <Label Content="Time out! Take a break." HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <Button Name="closeButton" Content="OK" IsDefault="True" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Width="84" Click="CloseButton_Click"/>
    </Grid>
</Window>
