<Window x:Class="BreakTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakTimer"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Break Timer" Height="213" Width="400">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <Label Name="timerLabel" Content="-" HorizontalContentAlignment="Center" Width="200" Margin="0,0,0,0"/>
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <Label Grid.Row="1" VerticalContentAlignment="Center">Timer (minutes):</Label>
                <TextBox Grid.Row="1" Grid.Column="2" Name="timeInput" VerticalContentAlignment="Center" PreviewTextInput="TimeInput_TextChanged" PreviewKeyDown="TimeInput_KeyDown"></TextBox>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Name = "timerButton" Content="Start timer" Height="25" Width="100" Click="TimerButton_Click" Margin="0,0,0,0"/>
                <Button Grid.Column="2" Name = "resetButton" Content="Reset timer" IsEnabled="False" Height="25" Width="100" Click="ResetButton_Click" Margin="0,0,0,0"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
