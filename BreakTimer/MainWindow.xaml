<Window x:Class="BreakTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakTimer"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Break Timer" Height="213" Width="479">
    <Grid>
        <Button Name = "timerButton" Content="Start timer" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="TimerButton_Click"/>
        <Button Name = "resetButton" Content="Reset timer" IsEnabled="False" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="ResetButton_Click"/>
        <Label Name="timerLabel" Content="-" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
